    "@types/jest": "^23.3.9",
    "@types/ramda": "^0.25.42",
    "@types/storybook__react": "^4.0.0",
    "enzyme": "^3.7.0",
    "enzyme-adapter-react-16": "^1.7.0",
    "final-form": "^4.11.0",
    "jest": "^23.6.0",
    "lerna": "^3.4.3",
    "ramda": "^0.26.0",
    "react": "^16.6.3",
    "react-dom": "^16.6.3",
    "react-final-form": "^4.0.2",
    "ts-jest": "^23.10.4",
    "ts-loader": "^5.3.0",
    "tslint": "^5.11.0",
    "typescript": "^3.1.6"
