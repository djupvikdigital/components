    },
    "testRegex": "(/__tests__/.*|(\\.|/)(test|spec))\\.(jsx?|tsx?)$",
    "moduleFileExtensions": [
      "ts",
      "tsx",
      "js",
      "jsx",
      "json"
    ]
  },
  "devDependencies": {
    "@babel/core": "^7.1.6",
    "@storybook/react": "^4.0.8",
    "@types/enzyme": "^3.1.15",
