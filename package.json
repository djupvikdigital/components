{
  "name": "components",
  "version": "1.0.0",
  "description": "Monorepo for React components",
  "private": true,
  "main": "index.js",
  "scripts": {
    "build": "tsc",
    "lint": "tslint --project tsconfig.json",
    "storybook": "start-storybook -p 9001 -c .storybook",
    "test": "jest"
  },
  "author": "Reidar Djupvik <reidar@djupvik.digital>",
  "license": "MIT",
  "jest": {
    "transform": {
      "^.+\\.(ts|tsx)$": "ts-jest"
    },
    "testRegex": "(/__tests__/.*|(\\.|/)(test|spec))\\.(jsx?|tsx?)$",
    "moduleFileExtensions": [
      "ts",
      "tsx",
      "js",
      "jsx",
      "json"
    ]
  },
  "workspaces": {
    "packages": [
      "packages/*"
    ]
  },
  "devDependencies": {
    "@babel/core": "^7.2.2",
    "@storybook/react": "^4.1.7",
    "@types/enzyme": "^3.1.15",
    "@types/enzyme-adapter-react-16": "^1.0.3",
    "@types/jest": "^23.3.13",
    "@types/ramda": "^0.25.47",
    "@types/storybook__react": "^4.0.0",
    "babel-loader": "^8.0.5",
    "enzyme": "^3.8.0",
    "enzyme-adapter-react-16": "^1.7.1",
    "jest": "^23.6.0",
    "ramda": "^0.26.1",
    "react": "^16.7.0",
    "react-dom": "^16.7.0",
    "styletron-engine-atomic": "^1.0.13",
    "styletron-react": "^4.4.4",
    "ts-jest": "^23.10.5",
    "ts-loader": "^5.3.3",
    "tslint": "^5.12.1",
    "typescript": "^3.2.4"
  },
  "packageManager": "yarn@3.2.1"
}
