{
  "name": "components",
  "version": "1.0.0",
  "description": "Monorepo for React components",
  "private": true,
  "main": "index.js",
  "scripts": {
    "bootstrap": "lerna bootstrap --hoist",
    "build": "tsc",
    "lint": "tslint --project tsconfig.json",
    "postinstall": "npm run bootstrap",
    "storybook": "start-storybook -p 9001 -c .storybook",
    "test": "jest"
  },
  "author": "Reidar Djupvik <reidar@djupvik.digital>",
  "license": "MIT",
  "jest": {
    "transform": {
      "^.+\\.tsx?$": "<rootDir>/node_modules/ts-jest/preprocessor.js"
    },
    "testRegex": "(/__tests__/.*|(\\.|/)(test|spec))\\.(jsx?|tsx?)$",
    "moduleFileExtensions": [
      "ts",
      "tsx",
      "js",
      "jsx",
      "json"
    ]
  },
  "devDependencies": {
    "@storybook/react": "^3.4.4",
    "@types/enzyme": "^3.1.10",
    "@types/enzyme-adapter-react-16": "^1.0.2",
    "@types/jest": "^22.2.3",
    "@types/ramda": "^0.25.28",
    "@types/redux-form": "^7.2.5",
    "@types/storybook__react": "^3.0.7",
    "enzyme": "^3.3.0",
    "enzyme-adapter-react-16": "^1.1.1",
    "jest": "^22.4.3",
    "lerna": "^2.11.0",
    "ramda": "^0.25.0",
    "react": "^16.3.2",
    "react-dom": "^16.3.2",
    "react-redux": "^5.0.7",
    "redux-form": "^7.3.0",
    "ts-jest": "^22.4.6",
    "ts-loader": "^4.3.0",
    "tslint": "^5.10.0",
    "typescript": "^2.8.3"
  }
}
